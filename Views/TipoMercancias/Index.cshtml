@model IEnumerable<TallerCuatro.Models.Entities.TipoMercancia>

@{
    ViewData["Title"] = "Index";
}



@section Styles{


}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Crear tipo de mercancia</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
                        <li class="breadcrumb-item active">Gestionar tipo de mercancia</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <p>
                <a class="btn btn-outline-success" asp-action="Create"><i class="fa fa-plus-circle"></i> Crear nuevo tipo de mercancia</a>
            </p>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td>
                                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.TipoMercanciaId"><i class="fas fa-user-edit"></i> Editar</a> |
                                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.TipoMercanciaId"><i class="fas fa-info-circle"></i> Detalles</a> |
                                <a class="m1-1 btn btn-danger" onclick="return confirm('¿Desea eliminar el registro?')" asp-action="Delete" asp-route-id="@item.TipoMercanciaId"><i class="fas fa-user-minus"></i> Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>



        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
</div>
<!-- /.content-wrapper@section Scripts{


    <script src="~/js/Tabla.js"></script>

} -->

@section Scripts{


    <script src="~/js/Tabla.js"></script>

    <script>

        @if(TempData["Mensaje"] != null && TempData["Accion"].ToString().Equals("EliminarOk")) { <text>

              Swal.fire({
                title: "¡Felicitaciones!",
                type: "success",
                html: "@TempData["Mensaje"]"
              });

             </text>
    }



         @if(TempData["Mensaje"] != null && TempData["Accion"].ToString().Equals("EliminarNo")) { <text>

              Swal.fire({
                title: "¡Lo sentimos!",
                type: "success",
                html: "@TempData["Mensaje"]"
              });

             </text>
    }

    </script>

}