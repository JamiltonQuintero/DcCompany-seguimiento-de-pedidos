@model TallerCuatro.Models.Entities.Cliente

@{
    ViewData["Title"] = "Details";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Detalle cliente</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Clientes">Gestión Clientes</a></li>
                        <li class="breadcrumb-item active">Detalle cliente</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ClienteId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ClienteId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Correo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Correo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Direccion)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Direccion)
                </dd>
                <br />
                <br />
                <br />
                <h3>Paquetes del cliente:</h3>
                <br />
                <table id="tabla" class="table">
                    <thead>
                        <tr>
                            <th>Id Paquete</th>
                            <th>Código</th>
                            <th>Peso</th>
                            <th>Estado</th>
                            <th>Guía Colombia</th>
                            <th>Transportadora</th>
                            <th>Tipo de Mercancía</th>
                            <th>Acciones</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var paquete in ViewBag.PaquetesCliente)
                        {
                            <tr>
                                <td>
                                    @paquete.PaqueteId
                                </td>
                                <td>
                                    @paquete.CodigoMIA
                                </td>
                                <td>
                                    @paquete.Peso
                                </td>
                                <td>
                                    @paquete.Estado
                                </td>
                                <td>
                                    @paquete.GuiaColombia
                                </td>
                                <td>
                                    @paquete.Transportadora.Nombre
                                </td>
                                <td>
                                    @paquete.TipoMercancia.Nombre
                                </td>
                                <td>
                                    <a class="btn btn-success" asp-action="Details" asp-route-id="@paquete.PaqueteId" asp-controller="Paquetes"><i class="fas fa-info-circle"></i>Detalle</a>
                                </td>


                            </tr>
                        }
                    </tbody>
                </table>

            </div>


        </div>
        
        <div>
            <a asp-action="Edit" type ="button"  asp-route-id="@Model.ClienteId" class="btn btn-outline-primary">Editar</a> |
            <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
        </div>






    </div>
    <!-- /.row -->
</div><!-- /.container-fluid -->





