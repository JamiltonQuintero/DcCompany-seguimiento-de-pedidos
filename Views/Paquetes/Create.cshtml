@model TallerCuatro.Models.Entities.Paquete


@{
    ViewData["Title"] = "Create";
}



@section Styles{

}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Crear paquete</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Paquetes">Gestión Paquetes</a></li>
                        <li class="breadcrumb-item active">Crear Paquete</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                       

                        <div class="form-group">
                            <label asp-for="Peso" class="control-label"></label>
                            <input asp-for="Peso" class="form-control" id="peso" />
                            <span asp-validation-for="Peso" class="text-danger"></span>
                        </div>

                        <div class="form-group">


                            <label asp-for="ClienteId" class="control-label"></label>
                            <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                        </div>

                        <div class="form-group">
                            <label asp-for="Estado" class="control-label"></label>
                            <input asp-for="Estado" class="form-control" />
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="NombreImagen" class="control-label"></label>
                            <input asp-for="NombreImagen" class="form-control" />
                            <span asp-validation-for="NombreImagen" class="text-danger"></span>
                        </div>

                        <div class="form-group">


                            <label asp-for="TransportadoraId" class="control-label"></label>
                            <select asp-for="TransportadoraId" class="form-control" asp-items="ViewBag.TransportadoraId"></select>
                        </div>

                        <div class="form-group">


                            <label asp-for="TipoMercanciaId" class="control-label"></label>
                            <select asp-for="TipoMercanciaId" class="form-control" asp-items="ViewBag.TipoMercanciaId"></select>
                        </div>

                        <div class="form-group">
                            <label asp-for="GuiaColombia" class="control-label"></label>
                            <input asp-for="GuiaColombia" class="form-control" />
                            <span asp-validation-for="GuiaColombia" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ValorAPAgar" class="control-label"></label>
                            <input asp-for="ValorAPAgar" class="form-control" require="false" value="0"/>
                            
                        </div>
                       

                        <br />
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>

                </div>
                <!-- /.col-md-6 -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section Scripts{

    <script>

        function calcularTotalAPagar() {

            var peso = document.getElementById("peso").value;

            return peso * 100

        }

    </script>

}

