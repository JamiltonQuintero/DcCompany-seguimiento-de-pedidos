@model TallerCuatro.Models.Entities.Paquete

@{
    ViewData["Title"] = "Details";
}



@section Styles{

}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Crear paquete</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Paquetes">Gestión Paquetes</a></li>
                        <li class="breadcrumb-item active">Crear Paquete</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">

                    <div>
                        <h4>Paqu ete</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-2">

                            </dt>
                            <dd class="col-sm-10">

                            </dd>

                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Cliente)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Cliente.Nombre)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.CodigoMIA)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.CodigoMIA)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Peso)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Peso)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Estado)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Estado)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.GuiaColombia)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.GuiaColombia)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Transportadora)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Transportadora.Nombre)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.TipoMercancia)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.TipoMercancia.Nombre)
                            </dd>
                            <dt class="col-sm-10">
                                <strong>Imagen:</strong>
                            </dt>
                            <dd class="col-sm-10">
                                <img src="@("~/image/" + Model.NombreImagen)" asp-append-version="true" width="250" height="250"/>
                            </dd>

                        </dl>
                    </div>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.PaqueteId">Edit</a> |
                        <a asp-action="Index">Back to List</a>
                    </div>

                </div>
                <!-- /.col-md-6 -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section Scripts{

    <script src="~/js/tabla.js"></script>

}







